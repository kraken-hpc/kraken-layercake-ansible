[Unit]
Description=Kraken distributed state engine
After=network.target network-online.target
Requires=network.target

[Service]
Type=notify
Environment=NOTIFY_SOCKET=/run/systemd/notify
NotifyAccess=all
WorkingDirectory={{ ansible_env.HOME }}
ExecStart=/usr/bin/podman start -a {{ "kraken-layercake-virt" if kr_with_vbox else "kraken-layercake" }}
ExecStop=/usr/bin/podman stop -t 10 {{ "kraken-layercake-virt" if kr_with_vbox else "kraken-layercake" }}

[Install]
WantedBy=multi-user.target